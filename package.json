{
  "name": "notion-to-markdown",
  "version": "0.0.3",
  "description": "Convert Notion pages to Markdown for static site generators like Hugo",
  "main": "src/index.ts",
  "private": true,
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/DamianFlynn/notion-to-markdown",
  "bugs": {
    "url": "https://github.com/DamianFlynn/notion-to-markdown/issues"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "Notion",
    "Markdown",
    "Hugo",
    "Static Site Generator"
  ],
  "author": "Damian Flynn",
  "dependencies": {
    "@notionhq/client": "^3.0.1",
    "axios": "^1.6.0",
    "dotenv": "^16.5.0",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.3.0",
    "markdown-table": "^3.0.4",
    "slugify": "^1.6.6",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-table": "^3.0.0",
    "@types/node": "^22.15.17",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
